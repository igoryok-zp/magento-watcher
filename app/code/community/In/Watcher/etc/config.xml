                    </watcher_core_collection_abstract_load_before>
                </observers>
            </core_collection_abstract_load_before>
            <eav_collection_abstract_load_before>
                <observers>
                    <watcher_eav_collection_abstract_load_before>
                        <type>singleton</type>
                        <class>watcher/observer</class>
                        <method>onCollectionLoadBefore</method>
                    </watcher_eav_collection_abstract_load_before>
                </observers>
            </eav_collection_abstract_load_before>
            <core_collection_abstract_load_after>
                <observers>
                    <watcher_core_collection_abstract_load_after>
