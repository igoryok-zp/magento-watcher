            <eav_collection_abstract_load_after>
                <observers>
                    <watcher_eav_collection_abstract_load_after>
                        <type>singleton</type>
                        <class>watcher/observer</class>
                        <method>onCollectionLoadAfter</method>
                    </watcher_eav_collection_abstract_load_after>
                </observers>
            </eav_collection_abstract_load_after>
            <model_load_before>
                <observers>
                    <watcher_model_load_before>
                        <type>singleton</type>
                        <class>watcher/observer</class>
                        <method>onModelLoadBefore</method>
                    </watcher_model_load_before>
                </observers>
            </model_load_before>
            <model_load_after>
                <observers>
                    <watcher_model_load_after>
                        <type>singleton</type>
                        <class>watcher/observer</class>
                        <method>onModelLoadAfter</method>
                    </watcher_model_load_after>
                </observers>
            </model_load_after>
            <model_save_before>
