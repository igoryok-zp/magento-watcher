<?xml version="1.0" encoding="UTF-8"?>
<config>
    <global>
        <models>
            <watcher>
                <class>In_Watcher_Model</class>
            </watcher>
        </models>
        <helpers>
            <watcher>
                <class>In_Watcher_Helper</class>
            </watcher>
        </helpers>
        <events>
            <controller_action_predispatch>
                <observers>
                    <watcher_controller_action_predispatch>
                        <type>singleton</type>
                        <class>watcher/observer</class>
                        <method>onActionPredispatch</method>
                    </watcher_controller_action_predispatch>
                </observers>
            </controller_action_predispatch>
            <controller_action_postdispatch>
                <observers>
                    <watcher_controller_action_postdispatch>
                        <type>singleton</type>
                        <class>watcher/observer</class>
                        <method>onActionPostdispatch</method>
                    </watcher_controller_action_postdispatch>
                </observers>
            </controller_action_postdispatch>
            <core_block_abstract_to_html_before>
                <observers>
                    <watcher_core_block_abstract_to_html_before>
                        <type>singleton</type>
                        <class>watcher/observer</class>
                        <method>onBlockToHtmlBefore</method>
                    </watcher_core_block_abstract_to_html_before>
                </observers>
            </core_block_abstract_to_html_before>
            <core_block_abstract_to_html_after>
                <observers>
                    <watcher_core_block_abstract_to_html_after>
                        <type>singleton</type>
                        <class>watcher/observer</class>
                        <method>onBlockToHtmlAfter</method>
                    </watcher_core_block_abstract_to_html_after>
                </observers>
            </core_block_abstract_to_html_after>
            <core_collection_abstract_load_before>
                <observers>
                    <watcher_core_collection_abstract_load_before>
                        <type>singleton</type>
                        <class>watcher/observer</class>
